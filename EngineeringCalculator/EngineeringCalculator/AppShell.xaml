<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EngineeringCalculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EngineeringCalculator"
    Shell.FlyoutBehavior="Flyout">


    <FlyoutItem Title="Main" Icon="tick_box.png">
        <ShellContent

        ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Round duct to rectangle" Icon="tick_box.png">
        <ShellContent
        ContentTemplate="{DataTemplate local:RoundToRect}"
            Route="RoundToRect"/>
    </FlyoutItem>

    <FlyoutItem Title="Rectangle duct to round" Icon="tick_box.png">
        <ShellContent
        ContentTemplate="{DataTemplate local:RectToRound}"
            Route="RectToRound"/>
    </FlyoutItem>
    
    <FlyoutItem Title="Round duct pressure loss" Icon="tick_box.png">
        <ShellContent
        ContentTemplate="{DataTemplate local:RoundPressureLoss}"
            Route="RoundPressureLoss"/>
    </FlyoutItem>
    
    <FlyoutItem Title="Rectangle duct pressure loss" Icon="tick_box.png">
        <ShellContent
        ContentTemplate="{DataTemplate local:RectPressureLoss}"
            Route="RectPressureLoss"/>
    </FlyoutItem>
</Shell>
