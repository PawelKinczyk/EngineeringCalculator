<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EngineeringCalculator.VentilationCalculations"
             Title="VentilationCalculations">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Picker x:Name="XPicker" Title="Select X dimension"/>
        <Picker x:Name="YPicker" Title="Select Y dimension"/>
        <Entry x:Name="entry"
       Placeholder="Enter air flow in m3/h"/>
        <Button
                x:Name="CounterBtn"
                Text="Recalculate"
                SemanticProperties.Hint="Recalculate rectangle duct to round"
                Clicked="OnGetEquivalentChannels"
                HorizontalOptions="Center" />
        <ListView x:Name="RecalculatedDucts" Background="Transparent">
            // to do list view with columns
        </ListView>

    </VerticalStackLayout>
    
</ContentPage>